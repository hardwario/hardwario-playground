{
  "name": "hardwario-playground",
  "productName": "HARDWARIO Playground",
  "author": {
    "name": "HARDWARIO s.r.o.",
    "email": "karel.blavka@hardwario.com",
    "url": "https://github.com/bigclownlabs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bigclownlabs/bch-playground.git"
  },
  "license": "MIT",
  "version": "2.0.0",
  "description": "HARDWARIO Playground - IoT Prototyping Platform",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build",
    "package-linux64": "npm run electron:build && electron-builder build --linux --x64",
    "package-win64": "npm run electron:build && electron-builder build --win --x64",
    "package-mac": "npm run electron:build && electron-builder build --mac",
    "typecheck": "tsc --noEmit",
    "patch": "node patch/patch.js",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild || echo Native module rebuild failed - use Node.js 18 LTS for serial port support"
  },
  "dependencies": {
    "@hardwario/node-red-contrib-hardwario": "^1.0.1",
    "aedes": "^0.51.0",
    "asar": "^3.2.0",
    "copy-to-clipboard": "^3.3.3",
    "electron-context-menu": "^3.6.1",
    "electron-prompt": "^1.7.0",
    "express": "^4.18.2",
    "hardwario-blockly-dev": "1.0.11",
    "ip": "^2.0.0",
    "is-port-reachable": "^4.0.0",
    "moment": "^2.30.1",
    "mqtt": "^5.3.4",
    "node-arp": "^1.0.6",
    "node-red": "^3.1.3",
    "node-red-contrib-azure-iotc-bridge": "^1.0.2",
    "node-red-contrib-blynk-iot": "^0.2.0",
    "node-red-contrib-blynk-ws": "^1.0.7",
    "node-red-contrib-ifttt": "^0.3.1",
    "node-red-dashboard": "^3.6.2",
    "ping": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.21.3",
    "react-select": "^5.8.0",
    "react-toastify": "^10.0.4",
    "request": "^2.88.2",
    "request-progress": "^3.0.0",
    "serialport": "^12.0.0",
    "ubidots-nodered": "^2.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@electron/rebuild": "^3.6.0",
    "@types/node": "^20.11.5",
    "fs-extra": "^11.2.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "sass-embedded": "^1.97.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "productName": "HARDWARIO Playground",
    "appId": "com.hardwario.playground",
    "artifactName": "hio-playground-v${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/",
      "dist-electron/",
      "node_modules/",
      "src/background/",
      "src/utils/",
      "src/assets/",
      "resources/icon.*",
      "resources/icons",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      "node_modules/\\@node-red/**/examples/**/*",
      "node_modules/\\@hardwario/**/examples/**/*",
      "node_modules/node-red*/**/examples/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "extraFiles": [
      {
        "from": "bin",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "electronVersion": "28.2.0",
    "publish": null,
    "npmRebuild": false,
    "mac": {
      "artifactName": "hio-playground-v${version}-macos-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "provisioningProfile": ".github/playground.provisionprofile"
    },
    "win": {
      "artifactName": "hio-playground-v${version}-windows-${arch}.${ext}",
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "HARDWARIO s.r.o.",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signDlls": false
    },
    "linux": {
      "artifactName": "hio-playground-v${version}-linux-${arch}.${ext}",
      "target": [
        "deb",
        "snap",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "nsis": {
      "artifactName": "hio-playground-v${version}-${os}-setup-${arch}.${ext}"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "afterSign": ".github/notarize.js"
  }
}
